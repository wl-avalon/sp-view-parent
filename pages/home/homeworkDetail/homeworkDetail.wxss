.homework-title-area{
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #dcdcdc;
  border-bottom: 1rpx solid #dcdcdc;
}

.homework-title{
  width: 100%;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.homtwork-title-cut-value{
  border-top: 1rpx solid #dcdcdc;
  margin-left: 200rpx;
  margin-right: 200rpx;
}

.homework-value{
  display: flex;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: center;
}

.commit-info-area{
  margin-top: 50rpx;
  padding-left: 30rpx;
  padding-right: 30rpx;
  background-color: #ffffff;
  border-top: 1rpx solid #dcdcdc;
  border-bottom: 1rpx solid #dcdcdc;
}

.minute-item{
  height: 90rpx;
  display: flex;
  align-items: center;
}

.minute-input{
  position:absolute; 
  right: 130rpx;
  text-align: right;
}

.minute-unit{
  position:absolute; 
  right: 30rpx;
  text-align: right;
}

.main-button-area{
  margin-top: 50rpx;
}

.finish-homework-button{
  height: 90rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #dcdcdc;
  border-bottom: 1rpx solid #dcdcdc;
}

.finish-homework-button-down{
  height: 90rpx;
  background-color: #dcdcdc;
  display: flex;
  align-items: center;
  justify-content: center;
  border-top: 1rpx solid #dcdcdc;
  border-bottom: 1rpx solid #dcdcdc;
}